<Window x:Class="WUK83Q_HFT_202223.WPFClient.NonCrudWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WUK83Q_HFT_202223.WPFClient"
        mc:Ignorable="d"
        Title="NonCrudWindow" Height="500" Width="700">
    <Window.Effect>
        <DropShadowEffect/>
    </Window.Effect>
    
    <Window.Resources>
        <Style x:Key="CustomHeaderStyle" TargetType="GridViewColumnHeader">
            <Setter Property="Background" Value="Gray"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>



        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" DataContext="{Binding}">
            <Label Content="NON-CRUD Methods" Background="LightBlue" Padding="10"/>
            <Button Content="Average age of cars" Command="{Binding NONCRUD1command}" Margin="10" Padding="5"  HorizontalAlignment="Left" Width="200" Height="27.96"/>
            <Button Content="Youngest or oldest car" Command="{Binding NONCRUD2command}" Margin="10" Padding="5" HorizontalAlignment="Left" Width="200" Height="27.96"/>
            <Button Content="Brand with the most cars" Command="{Binding NONCRUD3command}" Margin="10" Padding="5" HorizontalAlignment="Left" Width="200" Height="27.96"/>
            <Button Content="Models of the brand" Command="{Binding NONCRUD4command}" Margin="10" Padding="5" HorizontalAlignment="Left" Width="200" Height="27.96"/>
            <Button Content="Brands of concern" Command="{Binding NONCRUD5command}"  Margin="10" Padding="5" HorizontalAlignment="Left" Width="200" Height="27.96"/>
            <Button Content="Concern which have the most brand" Command="{Binding NONCRUD6command}"  Margin="10" Padding="5" HorizontalAlignment="Left" Width="200" Height="27.96"/>
            <Button Content="Country of the concern" Command="{Binding NONCRUD7command}"  Margin="10" Padding="5" HorizontalAlignment="Left" Width="200" Height="27.96"/>
            <Button Content="Listing the concerns" Command="{Binding NONCRUD8command}"  Margin="10" Padding="5" HorizontalAlignment="Left" Width="200" Height="27.96"/>
            <Button Content="Owner with the most cars" Command="{Binding NONCRUD9command}"  Margin="10" Padding="5" HorizontalAlignment="Left" Width="200" Height="27.96"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <Label Content="" Background="LightBlue" Padding="10"/>
            <Label Margin="10" Padding="5" HorizontalAlignment="Center" Width="200" Height="27.96"/>
            <TextBlock Text="{Binding}" Margin="10" Padding="5" HorizontalAlignment="Center" Width="200" Height="27.96"/>
            <Label Margin="10" Padding="5" HorizontalAlignment="Center" Width="200" Height="27.96"/>
            <TextBlock Text="{Binding}" Margin="10" Padding="5" HorizontalAlignment="Center" Width="200" Height="27.96"/>
            <TextBlock Text="{Binding}" Margin="10" Padding="5" HorizontalAlignment="Center" Width="200" Height="27.96"/>
            <Label Margin="10" Padding="5" HorizontalAlignment="Center" Width="200" Height="27.96"/>
            <TextBlock Text="{Binding}" Margin="10" Padding="5" HorizontalAlignment="Center" Width="200" Height="27.96"/>
            <TextBlock Text="{Binding}" Margin="10" Padding="5" HorizontalAlignment="Center" Width="200" Height="27.96"/>
            <Label Margin="10" Padding="5" HorizontalAlignment="Center" Width="200" Height="27.96"/>


        </StackPanel>
        
        <StackPanel Grid.Column="2" DataContext="">
            <Label Content="" Background="LightBlue" Padding="10"/>
            <Label Content="{Binding NONCRUD1command}" Margin="10" Padding="5" HorizontalAlignment="Center" Width="200" Height="27.96" BorderBrush="Black"/>
            <Label Content="{Binding NONCRUD2command}" Margin="10" Padding="5"  HorizontalAlignment="Center" Width="200" Height="27.96" BorderBrush="Black"/>
            <Label Content="{Binding NONCRUD3command}" Margin="10" Padding="5"  HorizontalAlignment="Center" Width="200" Height="27.96" BorderBrush="Black"/>
            <Label Content="{Binding NONCRUD4command}" Margin="10" Padding="5"  HorizontalAlignment="Center" Width="200" Height="27.96" BorderBrush="Black"/>
            <Label Content="{Binding NONCRUD5command}" Margin="10" Padding="5"  HorizontalAlignment="Center" Width="200" Height="27.96" BorderBrush="Black"/>
            <Label Content="{Binding NONCRUD6command}" Margin="10" Padding="5"  HorizontalAlignment="Center" Width="200" Height="27.96" BorderBrush="Black"/>
            <Label Content="{Binding NONCRUD7command}" Margin="10" Padding="5"  HorizontalAlignment="Center" Width="200" Height="27.96" BorderBrush="Black"/>
            <Label Content="{Binding NONCRUD8command}" Margin="10" Padding="5"  HorizontalAlignment="Center" Width="200" Height="27.96" BorderBrush="Black"/>
            <Label Content="{Binding NONCRUD9command}" Margin="10" Padding="5"  HorizontalAlignment="Center" Width="200" Height="27.96" BorderBrush="Black"/>
        </StackPanel>


